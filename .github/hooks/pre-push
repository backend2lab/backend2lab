#!/bin/sh
command -v git-lfs >/dev/null 2>&1 || { printf >&2 "\n%s\n\n" "This repository is configured for Git LFS but 'git-lfs' was not found on your path. If you no longer wish to use Git LFS, remove this hook by deleting the 'pre-push' file in the hooks directory (set by 'core.hookspath'; usually '.git/hooks')."; exit 2; }
git lfs pre-push "$@" || { echo >&2 "❌ Git LFS pre-push checks failed. Push blocked."; exit 1; }

# Execute tests before pushing

failed=0

if [ -f server/package.json ]; then
  npm test --prefix server || failed=1
fi

if [ -f client/package.json ]; then
  npm test --prefix client || failed=1
fi

if [ "$failed" -ne 0 ]; then
  echo >&2 "❌ Tests failed. Not allowing the push. Please fix the errors and try again."
  exit 1
fi

echo "✅ Tests passed. Allowing the push."
exit 0
