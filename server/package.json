{
  "name": "backend-playground-server",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.build.json && npm run copy-modules",
    "copy-modules": "cp -r src/modules/* dist/modules/",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "express": "^4.21.2",
    "@types/express": "^4.17.21",
    "@types/node": "~18.16.9",
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "supertest": "^7.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.33.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1"
  }
}
